<!-- 搜索组件 -->
<div class="search-widget">
  <div class="search-box">
    <i class="fas fa-search search-icon"></i>
    <input 
      type="text" 
      id="search-input" 
      placeholder="搜索文章..." 
      class="search-input"
    >
  </div>
  <div id="search-results" class="search-results hidden"></div>
</div>

<script>
  // 搜索功能将由app.js处理
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.getElementById('search-input');
    const searchResults = document.getElementById('search-results');
    
    if (searchInput && searchResults) {
      searchInput.addEventListener('input', (e) => {
        const query = e.target.value.trim().toLowerCase();
        
        if (query.length < 2) {
          searchResults.classList.add('hidden');
          return;
        }
        
        // 搜索文章
        const posts = Array.from(document.querySelectorAll('.post-card'));
        const results = posts.filter(post => {
          const title = post.querySelector('.title')?.textContent.toLowerCase();
          const excerpt = post.querySelector('.excerpt')?.textContent.toLowerCase();
          return title?.includes(query) || excerpt?.includes(query);
        });
        
        if (results.length === 0) {
          searchResults.innerHTML = '<div class="no-results">未找到相关文章</div>';
          searchResults.classList.remove('hidden');
        } else {
          searchResults.innerHTML = results.slice(0, 5).map(post => {
            const title = post.querySelector('.title')?.textContent;
            const link = post.querySelector('a')?.href;
            return `<a href="${link}" class="search-result-item">${title}</a>`;
          }).join('');
          searchResults.classList.remove('hidden');
        }
      });
      
      // 点击外部关闭搜索结果
      document.addEventListener('click', (e) => {
        if (!e.target.closest('.search-widget')) {
          searchResults.classList.add('hidden');
        }
      });
    }
  });
</script>

<style>
.search-widget {
  position: relative;
  margin-bottom: 20px;
}

.search-box {
  position: relative;
  display: flex;
  align-items: center;
}

.search-icon {
  position: absolute;
  left: 16px;
  color: var(--text-3);
  font-size: 14px;
}

.search-input {
  width: 100%;
  padding: 12px 16px 12px 44px;
  background: transparent;
  border: none;
  color: var(--text-1);
  font-size: 14px;
  transition: all 0.2s ease;
}

.search-input:focus {
  outline: none;
}

.search-input::placeholder {
  color: var(--text-3);
}

.search-results {
  position: absolute;
  top: calc(100% + 8px);
  left: 0;
  right: 0;
  background: transparent;
  max-height: 300px;
  overflow-y: auto;
  z-index: 100;
}

.search-results.hidden {
  display: none;
}

.search-result-item {
  display: block;
  padding: 12px 16px;
  color: var(--text-1);
  text-decoration: none;
  transition: all 0.2s ease;
}

.search-result-item:hover {
  color: var(--primary);
}

.no-results {
  padding: 20px;
  text-align: center;
  color: var(--text-3);
  font-size: 14px;
}
</style>
